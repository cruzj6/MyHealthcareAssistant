<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="7dp"
            android:background="@drawable/background_circle"
            android:src="@drawable/ic_pill"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_pill_title"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview_pill_days"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="@string/placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <!--LinearLayout
            android:id="@+id/linearlayout_view_notes_layout"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textview_Notes"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp"
                android:text="@string/view_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_announcement_orange_24dp"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </LinearLayout-->

        <TextView
            android:singleLine="true"
            android:id="@+id/textview_take_at_times"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:text="@string/times_differ_per_day"
            android:id="@+id/textview_times_differ"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_refill_by"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/button_show_item_notes"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_assignment_24dp"
            android:layout_width="55dp"
            android:layout_height="55dp" />
    </LinearLayout>
    <CheckBox
        android:layout_marginRight="3dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/checkbox_remove"
        android:visibility="invisible"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_stethescope"
            android:background="@drawable/background_circle"
            android:layout_width="60dp"
            android:layout_gravity="center_vertical"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/placeholder_string"
            android:textSize="15sp"
            android:id="@+id/textview_label"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/phtime_string"
            android:textColor="#949494"
            android:textSize="12sp"
            android:id="@+id/textview_label_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:text="@string/phtime_string"
            android:textColor="#ce2121"
            android:textSize="12sp"
            android:id="@+id/textview_labwork_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_remove_appt"
        android:visibility="invisible"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <Space
        android:layout_weight="0"
        android:layout_width="0dp"
        android:layout_height="80dp" />

</LinearLayout>
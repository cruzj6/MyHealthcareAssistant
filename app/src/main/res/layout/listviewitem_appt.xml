    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/white"
            android:text="@string/placeholder_string"
            android:textSize="18sp"
            android:id="@+id/textview_label"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/white"
            android:text="@string/phtime_string"
            android:textSize="15sp"
            android:id="@+id/textview_label_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:text="@string/phtime_string"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:id="@+id/textview_labwork_req"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/button_show_item_notes"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_assignment_24dp"
            android:layout_width="55dp"
            android:layout_height="55dp" />
    </LinearLayout>

    <CheckBox
        android:layout_marginStart="12dp"
        android:id="@+id/checkbox_remove"
        android:visibility="invisible"
        android:layout_weight="0.1"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>